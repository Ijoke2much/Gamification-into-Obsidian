{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",   // <---- change this
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "isolatedModules": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES2020"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
, "src/main.ts"  ]
}
